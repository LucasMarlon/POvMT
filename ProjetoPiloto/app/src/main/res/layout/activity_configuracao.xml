<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="povmt.projeto.les.povmt.projetopiloto.views.ConfiguracaoActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificaçao"
        android:id="@+id/switchLembrete"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textOn="ON"
        android:textOff="OFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Alterar horário da notificação"
        android:id="@+id/tv_novo_horario"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/switchLembrete"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:maxLength="2"
        android:id="@+id/et_hora"
        android:hint="00"
        android:layout_below="@+id/tv_novo_horario"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:maxLength="2"
        android:id="@+id/et_minuto"
        android:hint="00"
        android:layout_below="@+id/tv_novo_horario"
        android:layout_alignEnd="@+id/bt_alterar_horario" />

    <Button
        android:id="@+id/bt_alterar_horario"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_height="30dp"
        android:text="Alterar horário"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/teal"
        android:layout_below="@+id/et_hora"/>

</RelativeLayout>
