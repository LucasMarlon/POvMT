<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="povmt.projeto.les.povmt.projetopiloto.views.NovaAtividadeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/fotoAtividade"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/atividade"/>

        <ImageButton
            android:id="@+id/imgCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            android:layout_toEndOf="@+id/fotoAtividade" />

        <ImageButton
            android:id="@+id/imgGaleria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/galeria"
            android:layout_below="@id/imgCamera"
            android:layout_toEndOf="@+id/fotoAtividade"/>

        <ImageButton
            android:id="@+id/imgLixeira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lixeira"
            android:layout_below="@id/imgGaleria"
            android:layout_toEndOf="@+id/fotoAtividade"/>

    </RelativeLayout>

        <TextView
            android:id="@+id/tv_nome_atividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_name"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/et_nome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/prioridade"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/sp_prioridade"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/bt_add_atividade"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_height="30dp"
            android:text="@string/registrar"
            android:layout_below="@id/et_nome"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/teal"
            android:layout_gravity="left" />

</LinearLayout>
